{
  "name": "license-pilot",
  "displayName": "License Pilot",
  "description": "Quickly generate and add the right license to your project with just a few clicks. Simple, fast, and reliable.",
  "version": "0.0.9",
  "publisher": "EbenezerDon",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ebenezerdon/license-pilot"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "license",
    "pilot",
    "MIT",
    "GPL",
    "Apache",
    "software licensing",
    "project license",
    "add license",
    "license template",
    "copyright",
    "legal",
    "compliance"
  ],
  "activationEvents": [
    "onCommand:extension.addLicense"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.addLicense",
        "title": "Add a License"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.6.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
